{{#each this}}
    <h1 class="center">{{name.common}}</h1>
    <div class="section">
        <div >
            <div><b> Capital:</b> {{capital}}</div>
            <div><b>Population:</b> {{population}}</div>
            <ul class="list"><b>Languages:</b>
                {{#each this.languages}}
                    <li>{{this}}</li>
                {{/each}}
            </ul>
        </div>
        <div class="container container-flag">
            <img src="{{flags.png}}" class="flag" style="width=50%">
        </div>
    </div>

    

{{/each}}